<style>
  .nav-header {
    padding: 1rem 5rem;
    display: flex;
    justify-content: space-between;
  }

  .nav-items {
    display: flex;
  }

  .blog-title {
    margin-top: 1rem;
  }

  .blog-title a {
    color: #fff;
    font-size: 3rem;
  }

  .blog-title a:hover {
    text-decoration: none;
  }

  .nav-item {
    color: #fff;
    margin: 1rem;
  }

  .nav-item a {
    color: #fff;
    font-size: 2rem;
    text-decoration: none;
  }

  .nav-item a:hover {
    color: bisque;
  }

  .widget-profile-desc {
    color: #fff;
    font-size: 2.5rem;
    margin-top: 1rem;
  }
</style>

<header class="header">

  <div class="widget-profile-cover overlay {{#if @site.cover_image}}"
    style="background-image: url({{@site.cover_image}}){{else}}no-cover{{/if}}">

    <div class="nav-header">
      <div class="blog-title">
        <a class="" href="{{@site.url}}">{{@site.title}}</a>
      </div>
      <div class="nav-items">
        <div class="nav-item"><a href="https://lzcdev.xyz/">首页</a></div>
        <div class="nav-item"><a href="https://lzcdev.xyz/archives/">分类</a></div>
        <div class="nav-item"><a href="https://lzcdev.xyz/about/">关于</a></div>
        <div class="nav-item">
          <a id="globalSearch" href="#" class="search-toggle">
            <i class="search-icon fa fa-lg fa-search"></i>
          </a>
        </div>
      </div>

    </div>

    <div class="nav-body">
      <div class="widget-profile-header">
        <a class="widget-profile-logo" href="{{@site.url}}">
          {{#if @site.logo}}
          <img src="{{@site.logo}}" alt="{{@site.title}}" />
          {{else}}
          <img src="{{asset "img/user-image.png"}}" alt="{{@site.title}}" />
          {{/if}}
        </a>
      </div>

      <div>
        <p class="widget-profile-desc">
          {{#if @site.description}}
          {{@site.description}}
          {{else}}
          <em><a href="{{@site.url}}/ghost/settings/general/">({{t "Add Blog Description"}})</a></em>
          {{/if}}
        </p>
      </div>
    </div>
  </div>
</header>